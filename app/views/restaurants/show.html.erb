<section class="show">
	<h1><%= @restaurant.name %></h1>
	<p><%= @restaurant.description %></p>
	
	<ul>
	<% @restaurant.reviews.each do | review | %>
			<li> <%= "#{review.thoughts} (#{review.rating})"%> 
			<%= link_to 'Endorse this review',review_endorsements_path(review), class: "review_endorsement"%> 

				<span class="endorsements_count"> <%= review.endorsements.count %> endorsement </span>
			</li>

	<% end %>
	</ul>
			<p> Average: <%= star_rating(@restaurant.average_rating) %></p>
		
	<%= image_tag @restaurant.image.url(:medium) %>
</section>